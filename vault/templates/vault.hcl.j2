ui = true
disable_mlock = {{ vault_disable_mlock | to_json }}

storage "consul" {
  address = "127.0.0.1:8500"
  path = "vault/"
  token = "{{ vault_consul_token }}"
}

{% if vault_bind_localhost and "127.0.0.1:8200" not in vault_ip.stdout %}
listener "tcp" {
  address = "127.0.0.1:8200"
  tls_disable = 1
}
{% endif %}

listener "tcp" {
  address = "{{ vault_ip.stdout }}:8200"
  tls_disable = 1
}

api_addr = "http://{{ vault_ip.stdout }}:8200"
cluster_addr = "http://{{ vault_ip.stdout }}:8201"
