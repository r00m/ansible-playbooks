*filter

#  Allow all loopback (lo0) traffic and drop all traffic to 127/8 that doesn't use lo0
-A INPUT -i lo -j ACCEPT
-A INPUT -d 127.0.0.0/8 -j REJECT

#  Accept all established inbound connections
-A INPUT -m state --state ESTABLISHED,RELATED -j ACCEPT

#  Allow all outbound traffic - you can modify this to only allow certain traffic
-A OUTPUT -j ACCEPT

{% if firewall_allow_http or firewall_allow_https %}
#  Allow HTTP and HTTPS connections from anywhere (the normal ports for websites and SSL).
{% if firewall_allow_http %}
-A INPUT -p tcp --dport 80 -j ACCEPT
{% endif %}
{% if firewall_allow_https %}
-A INPUT -p tcp --dport 443 -j ACCEPT
{% endif %}
{% endif %}

{% if firewall_allow_ssh %}
#  Allow SSH connections
#  The -dport number should be the same port number you set in sshd_config
-A INPUT -p tcp -m state --state NEW --dport 22 -j ACCEPT
{% endif %}

{% if firewall_allow_ping %}
#  Allow ping
-A INPUT -p icmp -j ACCEPT
{% endif %}

{% if firewall_whitelisted_ips %}
#  Whitelisted IPs
{% for ip in firewall_whitelisted_ips %}
-A INPUT -p tcp -s {{ ip }} -j ACCEPT
-A INPUT -p udp -s {{ ip }} -j ACCEPT
{% endfor %}
{% endif %}

{% if firewall_raw_rules %}
#  Raw iptables rules
{% for rule in firewall_raw_rules %}
{{ rule }}
{% endfor %}
{% endif %}

#  Drop all other inbound - default deny unless explicitly allowed policy
-A INPUT -j DROP
-A FORWARD -j DROP

COMMIT
